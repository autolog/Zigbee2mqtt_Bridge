    <Device id="zigbeeCoordinator"  type="custom">
        <Name>Zigbee Coordinator</Name>
        <ConfigUI>
            <Template file="Templates/template_zigbee_coordinator.xml" />
		</ConfigUI>
        <States>
            <State id="status">
                <ValueType>String</ValueType>
